{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": ".output/server",
      "runtime": "nodejs18",
      "codebase": "default",
      "ignore": [".git", "firebase-debug.log", "firebase-debug.*.log"]
    }
  ],
  "hosting": {
    "public": ".output/public",
    "site": "vuefire-nuxt",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**",
        "function": "server"
      }
    ]
  },
  "emulators": {
    // "auth": {
    //   "port": 9099
    // },
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5050
    },
    "firestore": {
      "port": 8081
    },
    // "database": {
    //   "port": 9001
    // },
    // "storage": {
    //   "port": 9199
    // },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
